{
  "manifest_version": 3,
  "name": "TV Show Search",
  "version": "1.0.0",
  "description": "Search All Your Favourite TV Shows !",
  "icons": {
    "16": "./tv.png",
    "32": "./tv.png",
    "48": "./tv.png",
    "128": "./tv.png"
  },
  "action": {
    "default_title": "TV Show Search",
    "default_icon": {
      "16": "./tv.png",
      "32": "./tv.png",
      "48": "./tv.png",
      "128": "./tv.png"
    },
    "default_popup": "popup/popup.html"
  },
  "permissions": ["contextMenus","search","tabs"],
  "background": {
    "service_worker": "background.js"
  }
}